doctype
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title Signup | Red Aglet
    script(type='text/javascript', src='http://code.jquery.com/jquery-latest.min.js')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    script(type='text/javascript', src='scripts/signup.js')
    link(rel='stylesheet', href='styling/loginSignup.css')
    link(rel='stylesheet', href='styling/signup.css')
  body
    nav.navbar.navbar-expand-sm.bg-light.navbar-light
      a.navbar-brand(href='/home')
        img#logo(src='https://i.imgur.com/t5c5bfo.png')
    #box.container
      img#logo(src='https://i.imgur.com/t5c5bfo.png')
      h4 Create Account
      p.errorMessage= errorMessage
      form(action='register', method='post')
        .form-group
          label
            | Full name:
            p.required  *
          input.form-control(type='text', id='name',
                                      name='name',
                                      placeholder='Ex: John Smith',
                                      required='')
        .form-group
          label
            | Email Address:
            p.required  *
          input.form-control(type='text',
                             id='email',
                             name='email',
                             placeholder='Ex: someone@example.com',
                             required='')
        .form-group
          label
            | Password:
            p.required  *
          input.form-control(type='password',
                            id='password',
                            name='password',
                            placeholder='Password',
                            required='')
        .form-group
          label Phone number:
          input.form-control(type='text',
                             id='phone',
                             name='phone',
                             placeholder='Ex: (123)-456-6780')
        .form-group.form-check
          label.form-check-label
            input.form-check-input(type='checkbox',
                                   required='')
            |  I agree to the
            a#terms(href='')  Terms of Services
        | Already have an account?
        a#signup(href='/login')  Login
        input#submit.btn.btn-primary(type='submit', value='Sign up')
